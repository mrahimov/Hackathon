<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent" xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
    android:background="#eeeeee"
  tools:context="com.example.murodjonrahimov.hackathon.fragments.PoolsFragment">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:orientation="horizontal"
        android:gravity="center">

        <Button
          android:id="@+id/button_indoor"
          android:layout_width="170dp"
          android:background="@drawable/mybutton"
          android:layout_height="match_parent"
          android:gravity="center"
          android:shape="rectangle"
            android:backgroundTint="#bcaaa4"
            android:textColor="#fafafa"
            android:text="indoor pools"
            android:textStyle="bold"
            android:layout_marginRight="18dp"
            />

        <Button
          android:id="@+id/button_outdoor"
          android:layout_width="170dp"
          android:background="@drawable/mybutton"
          android:layout_height="match_parent"
            android:textColor="#fafafa"
            android:backgroundTint="#bcaaa4"
            android:layout_alignParentRight="true"
          android:text="outdoor pools"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerview_pool"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
