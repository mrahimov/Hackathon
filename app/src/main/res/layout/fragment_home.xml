<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.murodjonrahimov.hackathon.fragments.HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="60sp"
        android:text="NYCYouth"/>

    <android.support.v7.widget.CardView
        android:id="@+id/recreational_cardview"
        app:cardCornerRadius="16dp"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/basketBallImage"
                android:src="@drawable/basketball_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:text="Recreational Activities"
                android:textSize="30sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/opportunities_cardview"
        app:cardCornerRadius="16dp"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/opportunitiesImage"
                android:src="@drawable/opportunities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

